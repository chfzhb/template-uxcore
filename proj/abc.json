{
  "name": "<%- name %>",
  "options": {
    "type": "uxcore",
    "template": "<%- template %>",
    "npm": "<%- npm %>",
    "vars": {
      <% if (i18n) { %>"locale": "zh-cn",
      <% } %>"__LOCAL__": true
    },
    "buildvars": {
      "__LOCAL__": [false]<% if (i18n) { %>,
      "locale": [ "zh-cn", "en" ]<% } %>
    },
    "pages": <%= !SPA %>,
    "includes": [
      "node_modules/uxcore/assets"
    ],
    "injects": [
      "uxcore/assets/iconfont.css",
      "uxcore/assets/orange.css",
      "lie/dist/lie.polyfill",
      "natty-storage/dist/natty-storage",
      "natty-fetch/dist/natty-fetch.pc",
      "react/dist/react-with-addons",
      "react-dom/dist/react-dom",
      "react-router/umd/ReactRouter",
      "reflux/dist/reflux",
      "uxcore"
    ],
    "mockapi": {
      "/mock/query/getSomeInfo.json": "mock/query/getSomeInfo.js"
    }
  }
}
