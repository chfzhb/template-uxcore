{
    "name": "<%- name %>",
    "options": {
        "type": "uxcore",
        "template": "<%- template %>",
        "npm": "<%- npm %>",
        "vars": {
            <% if (i18n) { %>"locale": "zh-cn",
            <% } %>"__LOCAL__": true
        }<% if (i18n) { %>,
        "buildvars": {
            "locale": [ "zh-cn", "en" ]
        }<% } %>,
        "pages": true<% if (library) { %>,
        "libraries": {
            "Uxcore": {
                "output": "uxcore.js",
                "mappings": {
                    "Table": "uxcore-table@~1.5.1"
                }
            }
        }<% } %>
    }
}
